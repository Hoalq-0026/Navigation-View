<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="searchViewStyle">@style/Theme.NavDrawer.SearchView</item>
    </style>

    <style name="Theme.NavDrawer.SearchView" parent="Widget.AppCompat.SearchView">

        <!-- Background for the actions section (e.g. voice, submit) -->
        <item name="android:queryBackground">@layout/bg_search_view</item>
        <!-- Close button icon -->
        <item name="closeIcon">@android:drawable/ic_menu_close_clear_cancel</item>
        <!-- Search button icon -->
        <item name="searchIcon">@drawable/ic_search</item>
        <!-- Go/commit button icon -->
        <item name="goIcon">@drawable/ic_search</item>

    </style>

    <style name="ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#f76d3c</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension|reference"/>
        <attr name="border_color" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="OpenTextView">
        <attr name="fontVariation" format="enum">
            <enum name="normal" value="0"/>
            <enum name="light" value="1"/>
            <enum name="special" value="2"/>
            <enum name="thin" value="3"/>
            <enum name="medium" value="4"/>
            <enum name="condensed" value="5"/>
        </attr>
        <attr name="fixWidowWords" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="ScrimInsetsView">
        <attr name="InsertForeground" format="color|reference"></attr>
    </declare-styleable>
</resources>
